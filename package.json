{
  "name": "webpack",
  "version": "1.0.0",
  "description": "Projet Node.js pour apprendre GitHub Actions",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit.test.js",
    "test:integration": "jest tests/integration.test.js",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "security-check": "npm audit",
    "build": "echo 'Build step personnalisÃ©'",
    "predeploy": "npm run test && npm run lint",
    "coverage": "jest --coverage --coverageReporters=lcov"
  },
  "keywords": ["github-actions", "ci-cd", "nodejs", "jest", "express"],
  "author": "Votre Nom",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.56.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}